<Window x:Class="CPSC481.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vw="clr-namespace:CPSC481.Views"
        Title="Course" Height="500" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top">
                <Label Content="CPSC 481" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" Width="99" />
            </StackPanel>
            <ListBox x:Name="PrimaryCategoryList" HorizontalAlignment="Left" SelectionChanged="PrimaryCategoryList_SelectionChanged" Width="160" DockPanel.Dock="Left">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding}" FontSize="16" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <ListBox x:Name="SecondaryCategoryList" HorizontalAlignment="Left" Width="160" DockPanel.Dock="Left" SelectionChanged="SecondaryCategoryList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding}" FontSize="16" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel x:Name="PrimaryContent" DockPanel.Dock="Right">
                <vw:ThreadView x:Name="ThreadView"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>
